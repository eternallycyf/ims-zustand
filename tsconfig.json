{
  "compilerOptions": {
    "outDir": "dist",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "typing",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "target": "ESNext",
    "module": "ESNext",
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["vitest/globals"],
    "paths": {
      "@@/*": [".dumi/tmp/*"],
      "@/*": ["./src"],
      "ims-template": ["./src"],
      "ims-template/*": ["./src/*"]
    }
  },
  "exclude": ["node_modules", "dist", "server"]
}
